@model CellPhone.Areas.Admin.Models.Role.RoleViewModel
@{
    ViewBag.Title = "Tạo quyền";
}

<div class="mb-3">
    <h4>Tạo quyền</h4>
    @Html.ActionLink("Danh sách quyền", "Index", new {}, new { @class = "btn btn-outline-dark" })
    <hr>
</div>

<div>
    <form class="row" method="post">
        <div class="col-sm-6">
            <div class="mb-3 form-floating">
                @Html.TextBoxFor(r => r.RoleNormalizedName, new { @class = "form-control" })
                @Html.LabelFor(r => r.RoleNormalizedName)
                @Html.ValidationMessageFor(r => r.RoleNormalizedName, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3 form-floating">
                @Html.TextBoxFor(r => r.RoleName, new { @class = "form-control" })
                @Html.LabelFor(r => r.RoleName)
                @Html.ValidationMessageFor(r => r.RoleName, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-center">
                <button class="btn btn-outline-dark">Tạo quyền</button>
            </div>
        </div>
    </form>
</div>